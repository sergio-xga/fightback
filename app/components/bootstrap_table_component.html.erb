<div class="table-responsive">
  <table class="table" data-toggle="table" data-pagination="<%=@pagination%>" data-search="<%=@search%>">
    <thead>
      <tr>
      <% @headers.each do |h| %>
        <th scope="col"
          data-sortable='<%= h[:sortable] %>'
          data-field='<%= h[:field] %>'>
          <%= h[:title] %>
        </th>
      <% end %>
      </tr>
    </thead>
    <tbody>
      <% @data.each do |d| %>
        <tr>
          <% @headers.each do |h| %>
            <% if h[:field] == 'action_links' %>
              <td>
                <%= link_to("<i class='material-icons'>create</i>".html_safe, send("edit_#{@model}_path", d), class: 'btn btn-primary btn-sm') %>
                <%= link_to("<i class='material-icons'>delete</i>".html_safe, d, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger btn-sm') %>
              </td>
            <% else %>
              <td><%= d[h[:field]] %></td>
            <% end %>
          <% end %>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>