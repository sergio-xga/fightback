<div class="table-responsive">
  <table class="table" data-toggle="table" data-pagination="<%=@pagination%>" data-search="<%=@search%>">
    <thead>
      <tr>
      <% @headers.each do |h| %>
        <th scope="col"
          data-sortable='<%= h[:sortable] %>'
          data-field='<%= h[:field] %>'>
          <%= h[:title] %>
        </th>
      <% end %>
      </tr>
    </thead>
    <tbody>
      <% @data.each do |d| %>
        <tr>
          <% @headers.each do |h| %>
            <td><%= d[h[:field]] %></td>
          <% end %>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>